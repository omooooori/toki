# ========================================
# Toki AI日記アプリ - 統合環境設定ファイル
# ========================================

# ========================================
# サーバー設定
# ========================================
PORT=4000
NODE_ENV=development

# ========================================
# Firebase設定（バックエンド用）
# ========================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# ========================================
# OpenAI設定
# ========================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4

# ========================================
# API設定
# ========================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:4000/graphql

# ========================================
# CORS設定
# ========================================
CORS_ORIGIN=http://localhost:3000

# ========================================
# JWT設定
# ========================================
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# ========================================
# モバイルアプリ設定
# ========================================
# Flutterアプリでは、これらの値をlib/config/app_config.dartで定義
# または、flutter_dotenvを使用して.envファイルから読み込み

# ========================================
# 開発環境設定
# ========================================
# 開発環境でのみ使用する設定
DEBUG=true
LOG_LEVEL=debug

# ========================================
# 本番環境設定
# ========================================
# 本番環境では以下の値を適切に設定してください
# PRODUCTION_API_BASE_URL=https://your-api-domain.com
# PRODUCTION_GRAPHQL_ENDPOINT=https://your-api-domain.com/graphql 